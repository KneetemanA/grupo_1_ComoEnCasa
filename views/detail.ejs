<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head', {title: 'Detalle', bootstrapActive: true}) %>
<body>
	<!-- Header -->
	<%- include('./partials/header') %>
	<!-- /Header -->

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Detalle del producto: <%= p.name %></h2>
			</div>
		</div>
		<div class="product-detail">
			<div class="row">
			
			<div class="col-12 col-lg-8">
					<img src="/images/products/<%= p.image %>" alt="product image" class="product-detail-img">
					<p class="product-detail-description">
						<%= p.description %>
					</p>
				</div>
				<div class="col-12 col-lg-4">
					<article class="product-detail-info">
						<h2 class="product-detail-title"><%= p.name %></h2>
						
							<p class="product-detail-price small">
								<span>$<%=p.price %></span>
								
								<b><%= p.discount %>% OFF</b>
							</p>
							<p class="product-detail-price">
								$<%=p.price - (p.price * p.discount / 100)%>
							</p>
						

						<ul class="actions-list">
							<li>
								<i class="fas fa-credit-card"></i>
								<p>Pag√° en 12 cuotas sin interes</p>
							</li>
							<li>
								<i class="fas fa-store"></i>
								<p>Retiro gratis en locales del vendedor</p>
							</li>
						</ul>

						<a href="/carrito" class="buy-now-button">Agregar al carrito</a>
						<hr>

						<button><a href="/productos" class="action-button edit">Menu</a></button>
						
					</article>
			</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->

</body>