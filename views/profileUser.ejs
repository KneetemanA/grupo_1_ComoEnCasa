<!DOCTYPE html>
<html lang="es">
<!-- head -->
<%- include ("./partials/head",{title: "Productos" ,bootstrapActive: true})%>

  <body>
    <!-- header -->
    <%- include ("./partials/header") %>
    <main class="mainProfileUser">
        <div class="containerProfile">

            <div class="row profileUserDiv1">
                <div class="col-sm-4" style="margin-top: 50px;">
                    <div class="text-center">
                        <img src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" class="avatar img-circle img-thumbnail"
                            alt="avatar">
                        <h6>selecciona una nueva foto</h6>
                        <input type="file" class="text-center center-block file-upload">
                    </div>
                    </hr><br>
                </div>
    
                <div class="col-sm-8" style="margin-top: 50px;">
                    <ul class="nav nav-tabs">
                        <li class="active "><a class="perfilProfileUser" data-toggle="tab" href="#home">Perfil</a></li>
                    </ul>
    
    
                    <div class="tab-content">
                        <div class="tab-pane active" id="home">
                            <hr>
                            <form class="form row" action="/user/perfil" method="post" id="registrationForm">
                                <div class="form-group col-6">
    
                                    <div class="">
                                        <label for="nombreRegister">
                                            <h4>Nombre</h4>
                                        </label>
                                        <input type="text" class="form-control" name="name" id="nombreRegister"
                                            placeholder="nombre">
                                    </div>
                                </div>
                                <div class="form-group col-6">
    
                                    <div class="">
                                        <label for="usuarioRegister">
                                            <h4>Usuario</h4>
                                        </label>
                                        <input type="text" class="form-control" name="user" id="usuarioRegister"
                                            placeholder="usuario">
                                    </div>
                                </div>
    
                                <div class="form-group col-6">
    
                                    <div class="col-xs-6">
                                        <label for="teléfono">
                                            <h4>Teléfono</h4>
                                        </label>
                                        <input type="number" class="form-control" name="teléfono" id="teléfono"
                                            placeholder="teléfono">
                                    </div>
                                </div>
    
                                <div class="form-group col-6">
                                    <div class="col-xs-6">
                                        <label for="emailRegister">
                                            <h4>Email</h4>
                                        </label>
                                        <input type="text" class="form-control" name="email" id="emailRegister"
                                            placeholder="introduce tu móvil">
                                    </div>
                                </div>
                                <div class="form-group col-6">
    
                                    <div class="col-xs-6">
                                        <label for="provincia">
                                            <h4>Provincia</h4>
                                        </label>
                                        <input type="text" class="form-control" name="provincia" id="provincia"
                                            placeholder="provincia">
                                    </div>
                                </div>
                                <div class="form-group col-6">
    
                                    <div class="col-xs-6">
                                        <label for="ciudad">
                                            <h4>Ciudad</h4>
                                        </label>
                                        <input type="text" class="form-control" id="ciudad" placeholder="ciudad">
                                    </div>
                                </div>
                                <div class="form-group col-6">
    
                                    <div class="col-xs-6">
                                        <label for="calle">
                                            <h4>Calle</h4>
                                        </label>
                                        <input type="text" class="form-control" name="calle" id="calle"
                                            placeholder="calle">
                                    </div>
                                </div>
                                <div class="form-group col-6">
    
                                    <div class="col-xs-6">
                                        <label for="numero">
                                            <h4>Número</h4>
                                        </label>
                                        <input type="number" class="form-control" name="numero" id="numero"
                                            placeholder="numero de casa o depto">
                                    </div>
                                </div>
                                <div class="form-group col-6">
                                    <div class="col-xs-12">
                                        <br>
                                        <button class="btn btn-success" type="submit"><i
                                                class="glyphicon glyphicon-ok-sign"></i> Guardar</button>
                                        <button class="btn btn-danger" type="reset"><i
                                                class="glyphicon glyphicon-repeat"></i> Limpiar</button>
                                    </div>
                                </div>
                            </form>
    
                            <hr>
    
                        </div>
                    </div>
    
                </div>
            </div>
    </main>

      <%- include ("./partials/footer") %>

        <!--Boostrap script-->
        <%- include ("./partials/scripts") %>
  </body>

</html>