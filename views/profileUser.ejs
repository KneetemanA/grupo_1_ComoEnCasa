<!DOCTYPE html>
<html lang="es">
<!-- head -->
<%- include ("./partials/head",{title: "Perfil Usuario" ,bootstrapActive: true})%>

  <body>
    <!-- header -->
    <%- include ("./partials/header") %>
    <main class="mainProfileUser">
        <div class="containerProfile">

            <div class="row profileUserDiv1">
                <div class="col-sm-4" style="margin-top: 50px;">
                    <div class="text-center">
                            <figure style="width: 250px; margin: auto;"><img style="width: 100%;" src="/images/<%=userlogueado.image%>"  class="avatar img-circle img-thumbnail"
                                alt="avatar"></figure> 
                                <h6>selecciona una nueva foto</h6>
                                <input type="file" name="imageProfile" id="imageProfile" class="text-center center-block file-upload">
                    </div>
                    </hr><br>
                </div>
    
                <div class="col-sm-8" style="margin-top: 50px;">
                    <ul class="nav nav-tabs">
                        <li class="active "><a class="perfilProfileUser" data-toggle="tab" href="#home">Perfil</a></li>
                    </ul>
    
    
                    <div class="tab-content">
                        <div class="tab-pane active" id="home">
                            <hr>
                            <form class="form row" action="/user/perfil/<%=userlogueado.user%>?_method=PUT" method="post" enctype="multipart/form-data" id="registrationForm">
                                <div class="form-group col-6">
    
                                    <div class="">
                                        <label for="nombreRegister">
                                            <h4>Nombre</h4>
                                        </label>
                                        <input type="text" class="form-control" name="name" id="nombreRegister" value="<%=userlogueado.name%>"
                                            placeholder="nombre">
                                    </div>
                                </div>
                                <div class="form-group col-6">
    
                                    <div class="">
                                        <label for="usuarioRegister">
                                            <h4>Usuario</h4>
                                        </label>
                                        <input type="text" class="form-control" name="user" id="usuarioRegister" value="<%=userlogueado.user%>"
                                            placeholder="usuario">
                                    </div>
                                </div>
    
                                <div class="form-group col-6">
    
                                    <div class="col-xs-6">
                                        <label for="teléfono">
                                            <h4>Teléfono</h4>
                                        </label>
                                        <input type="number" class="form-control" name="phone" id="phone" value="<%=userlogueado.phone? userlogueado.phone : "" %>"
                                            placeholder="teléfono">
                                    </div>
                                </div>
    
                                <div class="form-group col-6">
                                    <div class="col-xs-6">
                                        <label for="emailRegister">
                                            <h4>Email</h4>
                                        </label>
                                        <input type="text" class="form-control" name="email" id="emailRegister" value="<%=userlogueado.email%>"
                                            placeholder="introduce tu móvil">
                                    </div>
                                </div>
                                <div class="form-group col-6">
    
                                    <div class="col-xs-6">
                                        <label for="provincia">
                                            <h4>Provincia</h4>
                                        </label>
                                        <input type="text" class="form-control" name="province" id="province"  value="<%=userlogueado.province? userlogueado.province : "" %>"
                                            placeholder="provincia">
                                    </div>
                                </div>
                                <div class="form-group col-6">
    
                                    <div class="col-xs-6">
                                        <label for="ciudad">
                                            <h4>Ciudad</h4>
                                        </label>
                                        <input type="text" class="form-control" name="city" id="city" placeholder="ciudad" value="<%=userlogueado.city? userlogueado.city : "" %>">
                                    </div>
                                </div>
                                <div class="form-group col-6">
    
                                    <div class="col-xs-6">
                                        <label for="street">
                                            <h4>Calle</h4>
                                        </label>
                                        <input type="text" class="form-control" name="street" id="street" value="<%=userlogueado.street? userlogueado.street : "" %>"
                                            placeholder="calle">
                                    </div>
                                </div>
                                <div class="form-group col-6">
    
                                    <div class="col-xs-6">
                                        <label for="numero">
                                            <h4>Número</h4>
                                        </label>
                                        <input type="number" class="form-control" name="num" id="num" value="<%=userlogueado.num? userlogueado.num : "" %>"
                                            placeholder="numero de casa o depto">
                                    </div>
                                </div>
                                <div class="form-group col-6">
                                    <div class="col-xs-12">
                                        <br>
                                        <button class="btn btn-success" type="submit"><i
                                                class="glyphicon glyphicon-ok-sign"></i> Guardar</button>
                                        <button class="btn btn-danger" type="reset"><i
                                                class="glyphicon glyphicon-repeat"></i> Limpiar</button>
                                    </div>
                                </div>
                            </form>
    
                            <hr>
    
                        </div>
                    </div>
    
                </div>
            </div>
    </main>

      <%- include ("./partials/footer") %>

        <!--Boostrap script-->
        <%- include ("./partials/scripts") %>
  </body>

</html>